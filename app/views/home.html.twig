<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ArticleSpace - Home</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">

</head>
<body class="bg-gray-100 font-sans">

 {% include "partials/navbar.twig" %}

            {% if flash.error  %}

                <div id="red_message" class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="ri-error-warning-line text-red-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">{{ flash.error }}</p>
                        </div>
                    </div>
                    <script>setTimeout(()=>{  document.getElementById('red_message')?.remove();},5000) </script>
                </div>
            {% endif %}

            {% if flash.message %}
                <div id="green_message" class="bg-green-50 border-l-4 border-green-400 p-4 mb-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="ri-error-warning-line text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">{{ flash.message }}</p>
                        </div>
                    </div>
                    <script>setTimeout(()=>{  document.getElementById('green_message')?.remove();},5000) </script>
                </div>
                
            {% endif %}

    <!-- Main Content -->
    <main class="container mx-auto py-8">
        <h2 class="text-3xl font-bold mb-6">Latest Articles</h2>

        <!-- Article List -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for article in articles %}
            <div class="bg-white shadow-md rounded-lg p-6">
                <h3 class="text-xl font-semibold mb-2">{{ article.title }}</h3>
                <p class="text-gray-600 text-sm mb-4">By {{ article.author.name }} on {{ article.created_at }}</p>
                <p class="text-gray-700">{{ article.content | slice(0, 100) }}...</p>
                <a href="#" class="block mt-4 text-green-600 hover:underline">Read More</a>
            </div>
            {% endfor %}
        </div>
    </main>
 {% include "partials/footer.twig" %}


</body>
</html>